<body>
    <header>
        <h1>MyChart - Patient Portal</h1>
    </header>

    <div class="container">
        <!-- Login Section -->
        <div class="section">
            <h2>Login</h2>
            <form id="login-form">
                <input type="text" id="username" placeholder="Username" required>
                <input type="password" id="password" placeholder="Password" required>
                <button type="button" onclick="login()">Login</button>
            </form>
        </div>

        <!-- Appointment Section -->
        <div class="section" id="appointment-section" style="display:none;">
            <h2>Upcoming Appointments</h2>
            <ul id="appointment-list"></ul>
            <button onclick="scheduleAppointment()">Schedule New Appointment</button>
        </div>

        <!-- Messages Section -->
        <div class="section" id="messages-section" style="display:none;">
            <h2>Messages</h2>
            <textarea id="message-content" placeholder="Write your message..."></textarea>
            <button onclick="sendMessage()">Send Message</button>
            <div id="message-list"></div>
        </div>

        <!-- Prescription Refills Section -->
        <div class="section" id="refills-section" style="display:none;">
            <h2>Request Prescription Refill</h2>
            <form id="refill-form">
                <input type="text" id="medication" placeholder="Medication Name" required>
                <input type="number" id="quantity" placeholder="Quantity" required>
                <button type="button" onclick="requestRefill()">Request Refill</button>
            </form>
        </div>
    </div>

    <script>
        // Simple JavaScript to simulate login
        const login = () => {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (username === 'patient' && password === 'password123') {
                alert('Login successful!');
                document.getElementById('appointment-section').style.display = 'block';
                document.getElementById('messages-section').style.display = 'block';
                document.getElementById('refills-section').style.display = 'block';
            } else {
                alert('Invalid login');
            }
        };

        // Simulate scheduling an appointment
        const scheduleAppointment = () => {
            const appointmentList = document.getElementById('appointment-list');
            const appointment = 'New Appointment: 04/25/2024 at 2:00 PM';
            const li = document.createElement('li');
            li.textContent = appointment;
            appointmentList.appendChild(li);
        };

        // Simulate sending a message
        const sendMessage = () => {
            const messageContent = document.getElementById('message-content').value;
            const messageList = document.getElementById('message-list');
            const p = document.createElement('p');
            p.textContent = `Message: ${messageContent}`;
            messageList.appendChild(p);
            alert('Message sent!');
        };

        // Simulate requesting a prescription refill
        const requestRefill = () => {
            const medication = document.getElementById('medication').value;
            const quantity = document.getElementById('quantity').value;
            alert(`Refill requested for ${medication}, Quantity: ${quantity}`);
        };
    </script>
</body>
