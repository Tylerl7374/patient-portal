<body>
    <div class="container">
        <h1>Patient Portal</h1>

        <!-- Request Prescription Refill Section -->
        <div class="section">
            <h2>Request Prescription Refill</h2>
            <form id="refill-form">
                <label for="medication">Medication Name</label>
                <input type="text" id="medication" name="medication" placeholder="Enter Medication Name">

                <label for="quantity">Quantity Needed</label>
                <input type="number" id="quantity" name="quantity" placeholder="Enter Quantity">

                <button type="button" onclick="requestRefill()">Request Refill</button>
            </form>
        </div>

        <!-- Send Message Section -->
        <div class="section">
            <h2>Send a Message</h2>
            <form id="message-form">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" placeholder="Enter Subject">

                <label for="message">Message</label>
                <textarea id="message" name="message" rows="4" placeholder="Type your message here"></textarea>

                <button type="button" onclick="sendMessage()">Send Message</button>
            </form>
        </div>

        <!-- View Past Visits Section -->
        <div class="section">
            <h2>View Past Visits</h2>
            <div id="past-visits">
                <!-- Visits will be loaded here dynamically -->
            </div>
        </div>

        <!-- Schedule Appointment Section -->
        <div class="section">
            <h2>Schedule Appointment</h2>
            <form id="appointment-form">
                <label for="appointment-date">Choose a Date</label>
                <input type="date" id="appointment-date" name="appointment-date">

                <label for="appointment-time">Choose a Time</label>
                <input type="time" id="appointment-time" name="appointment-time">

                <button type="button" onclick="scheduleAppointment()">Schedule Appointment</button>
            </form>
        </div>
    </div>

    <script>
        // Function to request a prescription refill
        function requestRefill() {
            const medication = document.getElementById('medication').value;
            const quantity = document.getElementById('quantity').value;
            alert(`Refill request sent for ${medication}, Quantity: ${quantity}`);
            // Here, you'd make an API call to the back-end server
        }

        // Function to send a message
        function sendMessage() {
            const subject = document.getElementById('subject').value;
            const message = document.getElementById('message').value;
            alert(`Message sent with Subject: ${subject}`);
            // Here, you'd make an API call to the back-end server
        }

        // Function to schedule an appointment
        function scheduleAppointment() {
            const appointmentDate = document.getElementById('appointment-date').value;
            const appointmentTime = document.getElementById('appointment-time').value;
            alert(`Appointment scheduled for ${appointmentDate} at ${appointmentTime}`);
            // Here, you'd make an API call to the back-end server
        }

        // Example function to load past visits
        function loadPastVisits() {
            const visits = [
                { date: '01/05/2024', reason: 'Check-up' },
                { date: '03/12/2024', reason: 'Follow-up' },
            ];
            const visitsContainer = document.getElementById('past-visits');
            visitsContainer.innerHTML = visits.map(visit => `<p><strong>${visit.date}</strong>: ${visit.reason}</p>`).join('');
        }

        // Load past visits on page load
        window.onload = loadPastVisits;
    </script>
